{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"final_space": false,
    "console_title": true,
    "console_title_style": "template",
    "console_title_template": "{{if .Root}}(Admin){{end}} {{.Path}}",
    "blocks": [
        {
            "type": "newline",
            "alignment": "",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": null
        },
		{
			"type": "prompt",
            "alignment": "left",    
			"horizontal_offset": -100,			
            "segments": [				
				{
                    "type": "aws",
                    "style": "plain",
                    "powerline_symbol": "",
                    "invert_powerline": false,
                    "foreground": "",
                    "background": "",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "properties": {                        
						//"template": "[{{.Profile}}{{if .Region}}<#F8991D>\uf52c</>{{.Region}}{{end}}]",
						"template": "{{.Profile}}{{if .Region}}<#6C6C6C>\uf52c</>{{.Region}}{{end}}",
						"style": "full",
						"prefix": "[",
						"postfix": "]"
                    }
                },
				{
                    "type": "time",
                    "style": "plain",
                    "foreground": "lightGreen"
                }				
			]
		},
		{
            "type": "newline",
            "alignment": "",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": null
        },
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [                
				
                {
                    "type": "path",
                    "style": "plain",
                    "powerline_symbol": "",
                    "invert_powerline": false,
                    "foreground": "#81A1C1",
                    "background": "",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "properties": {
                        "prefix": "",
                        "style": "full"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "git",
                    "style": "plain",
                    "powerline_symbol": "",
                    "invert_powerline": false,
                    //"foreground": "#6C6C6C",
					//"foreground": "#C678DD",
					"foreground": "#D4AAFC",
                    "background": "",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "properties": {
                        "branch_ahead_icon": "\u003c#88C0D0\u003e⇡ \u003c/\u003e",
                        "branch_behind_icon": "\u003c#88C0D0\u003e⇣ \u003c/\u003e",
                        "branch_icon": "",
                        "display_stash_count": true,
                        "display_status": true,
                        "display_status_detail": true,
                        "display_upstream_icon": true,
                        "github_icon": "",
                        "local_working_icon": "\u003c#FFAFD7\u003e*\u003c/\u003e"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "executiontime",
                    "style": "plain",
                    "powerline_symbol": "",
                    "invert_powerline": false,
                    "foreground": "#A3BE8C",
                    "background": "",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "properties": {
                        "style": "austin"
                    }
                }
            ]
        },
        {
            "type": "newline",
            "alignment": "",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": null
        },
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "exit",
                    "style": "plain",
                    "powerline_symbol": "",
                    "invert_powerline": false,
                    "foreground": "#B48EAD",
                    "background": "",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "properties": {
                        "always_enabled": true,
                        "display_exit_code": false,
                        "error_color": "#BF616A",
                        "prefix": "❯"
                    }
                }
            ]
        }
    ]
}
